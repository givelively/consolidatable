# frozen_string_literal: true

require 'consolidatable'

Consolidatable.configure do |config|
  # The default time a consolidated value is considered fresh.
  config.not_older_than = 1.hour

  # the default type you want to use for your consolidations.
  config.type = :integer

  # The default class that is responsible for providing and recalculating the right data
  # InlineConsolidationFetcher: updates stale data the moment it is requested
  # BackgroundConsolidationFetcher: provides the existing data and updates in the
  #                                 background when necessary
  config.fetcher = Consolidatable::InlineFetcher
end
